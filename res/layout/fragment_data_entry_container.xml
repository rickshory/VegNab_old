<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/show_pager_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start subplots"
        android:padding="10dp"
        />

	<android.support.v4.view.ViewPager
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/data_entry_pager"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	        android:layout_alignLeft="@id/show_pager_button"
	        android:layout_below="@id/show_pager_button"
	    >
	    <android.support.v4.view.PagerTitleStrip
		    android:id="@+id/data_entry_pager_title_strip"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="top"
		    android:background="#33B5E5"
		    android:paddingTop="4dp"
		    android:paddingBottom="4dp">
	    </android.support.v4.view.PagerTitleStrip>
	</android.support.v4.view.ViewPager>
</RelativeLayout>