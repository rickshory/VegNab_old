<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vegnab.vegnab.NewVisit$PlaceholderFragment" >
    
    <Button
        android:id="@+id/subplotNewItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/veg_subplot_new_item_button_msg"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
         />
    
    <TextView 
        android:id="@+id/txt_test_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/subplotNewItemButton"        
        />
    
    <ListView android:id="@id/android:list"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:drawSelectorOnTop="false"
         android:layout_alignLeft="@id/subplotNewItemButton"
         android:layout_below="@id/subplotNewItemButton"
         />

    <TextView
        android:id="@id/android:empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/android:list"
        android:layout_below="@id/android:list"
        android:text="@string/veg_subplot_no_items"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
